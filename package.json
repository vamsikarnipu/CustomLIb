{
	"name": "com.genpact",
	"version": "1.0.0",
	"description": "UI5 Application: com.genpact",
	"author": "vamsikarnipu",
	"license": "Apache-2.0",
	"scripts": {
		"clean": "rimraf dist coverage",
		"build": "ui5 build --clean-dest",
		"build:opt": "ui5 build self-contained --clean-dest --all",
		"deploy": "npm run build && cf push",
		"start": "ui5 serve --port 8080 -o index.html",
		"start-cdn": "ui5 serve --port 8080 -o index-cdn.html",
		"start:dist": "npm start -- --config ui5-dist.yaml",
		"start:dist-cdn": "npm run start-cdn -- --config ui5-dist.yaml",
		"lint": "eslint webapp",
		"test-ui5": "start-server-and-test start http://localhost:8080 test-runner-coverage",
		"test-runner": "ui5-test-runner --port 8081 --url http://localhost:8080/test/testsuite.qunit.html",
		"test-runner-coverage": "ui5-test-runner --port 8081 --url http://localhost:8080/test/testsuite.qunit.html --coverage -ccb 50 -ccf 50 -ccl 50 -ccs 50",
		"test": "npm run lint && npm run test-ui5",
		"wdi5": "wdio run ./webapp/test/e2e/\\wdio.conf.js"
	},
	"devDependencies": {
		"@ui5/cli": "^4.0.26",
		"@ui5/middleware-code-coverage": "^2.0.1",
		"@wdio/cli": "^9.20.1",
		"@wdio/local-runner": "^9.20.1",
		"@wdio/mocha-framework": "^9.20.1",
		"@wdio/spec-reporter": "^9.20.0",
		"eslint": "^9.36.0",
		"eslint-plugin-jsdoc": "^60.3.1",
		"globals": "^16.4.0",
		"rimraf": "^6.0.1",
		"start-server-and-test": "^2.1.2",
		"ui5-middleware-livereload": "^3.1.4",
		"ui5-middleware-simpleproxy": "^3.5.2",
		"ui5-test-runner": "^5.9.1",
		"wdio-ui5-service": "^3.0.2"
	}
}
